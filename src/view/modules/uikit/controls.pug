section.controls
  .container.mb-3
    h5.section-title Controls
  .container.mb-3
    
    .row
      .col-md-6
        h6.section-subtitle Regular Inputs
        .card.mb-5
          .mb-3
            .input-group-btn
              input#normal-input.form-control.mr-2(
                value="Value",
                type="text",
                tabindex="1")
              button.btn.btn-primary Long Value
          .mb-3
            .input-group-btn
              input#normal-input.form-control.form-control-lg.mr-2(
                value="Value",
                type="text",
                tabindex="1")
              button.btn.btn-lg.btn-primary Long Value
          .mb-0
            .input-group-btn
              input#normal-input.form-control.form-control-sm.mr-2(
                value="Value",
                type="text",
                tabindex="1")
              button.btn.btn-sm.btn-primary Long Value
      .col-md-6
        h6.section-subtitle Input Groups
        .card.mb-5
          .mb-3
            .input-group
              span.input-group-addon.oi(data-glyph="calendar")
              input#normal-input.form-control(
                value="Value",
                type="text",
                tabindex="1")
          .mb-3
            .input-group.input-group-lg
              span.input-group-addon.oi(data-glyph="calendar")
              input#normal-input.form-control.form-control-lg(
                value="Value",
                type="text",
                tabindex="1")
          .mb-0
            .input-group.input-group-sm
              span.input-group-addon.oi(data-glyph="calendar")
              input#normal-input.form-control.form-control-sm(
                value="Value",
                type="text",
                tabindex="1")

    h6.section-subtitle.mb-3 Regular Checkboxes
    .row.mb-5
      .col-md-6
        .mb-3
          .custom-checkbox
            input#custom-checkbox.form-check-input(type="checkbox" value="")
            label(for="custom-checkbox").form-check-label Lorem ipsum dolor sit amet
        .mb-3
          .custom-checkbox.custom-checkbox-lg
            input#custom-checkbox-lg.form-check-input(type="checkbox" value="")
            label(for="custom-checkbox-lg").form-check-label Lorem ipsum dolor sit amet
        .mb-3
          .custom-checkbox.custom-checkbox-sm
            input#custom-checkbox-sm.form-check-input(type="checkbox" value="")
            label(for="custom-checkbox-sm").form-check-label Lorem ipsum dolor sit amet

        .form-group
          label(for="input-with-label") Text Label
          input#input-with-label.form-control(type="text")
          small.form-text.text-muted Lorem ipsum dolor sit amet, consectetur adipisicing elit.
      .col-md-6
        


    h6.section-subtitle Regular Input Controls
    .row.mb-5
      .col-md-3
        .input-control
          input#verification-code.form-control.input-control--field(type="text")
          label(for="verification-code").control-label Verification Code
          span.form-control--clear.fa.fa-times-circle
          span.form-control--message Error Message
      .col-md-3
        .input-control.filled
          input#verification-code.form-control.input-control--field(
            value="Test",
            type="text",
            tabindex="1")
          label(for="verification-code").control-label Verification Code
          span.form-control--clear.fa.fa-times-circle
          span.form-control--message Error Message
      .col-md-3
        .input-control.filled.has-error
          input#verification-code.form-control.input-control--field(
            value="Error",
            type="text",
            tabindex="1")
          label(for="verification-code").control-label Verification Code
          span.form-control--clear.fa.fa-times-circle
          span.form-control--message Error Message
      .col-md-3
        .input-control.filled.has-warning
          input#verification-code.form-control.input-control--field(
            value="Error",
            type="text",
            tabindex="1")
          label(for="verification-code").control-label Verification Code
          span.form-control--clear.fa.fa-times-circle
          span.form-control--message Warning Message
    
    h6.section-subtitle Input Controls Variations
    .row.mb-6
      .col-md-3
        .input-control.select-control
          input#title.form-control.input-control--field(
            type="text",
            name="title",
            autocomplete="off")
          label(for="title").control-label Title
          span.form-control--select.fa.fa-angle-down
          span.form-control--clear.fa.fa-times-circle
          span.form-control--message Error Message
